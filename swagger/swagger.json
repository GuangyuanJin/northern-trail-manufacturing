{
    "swagger": "2.0",
    "info": {
        "description": "How to fetch manufacturing data for Swagger",
        "version": "1.0.0",
        "title": "TrailMix Manufacturing",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "email": "mail@winkelmeyer.com"
        },
        "license": {
